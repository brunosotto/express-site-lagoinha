<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%-  include('comum/metatags') -%>
    <title>Lagoinha Promiss√£o - Devocional : <%= devocional.page.title %></title>

    <base href="<%= baseHref %>" />

    <!-- Css -->
    <%-  include('comum/includeCss') -%>

    <%- include('comum/favicon') -%>

</head>

<body>
    <!--  Menu -->
    <%- include('comum/menu') -%>

    <section class="devocional-item-main animated fadeInUp delay3">
        <div class="container">
            <!-- title -->
            <div class="row text-center title">
                <div class="col-sm-12">
                    <h2> <%= devocional.page.title %> </h2>
                    <span class="dotts"> . . . . . . </span>
                </div>
            </div>
            <div class="row ">
                <div class="col">

                    <div class="card dev-card-item">
                        <figure figure class="figure" <%= 'style=background-color:#' + devocional.page.main_color %>>

                            <img src="<%=  devocional.page.image  %> "
                                class="figure-img img-fluid devocional-card-image" alt="<%=  devocional.page.title %>">
                        </figure>
                        <div class="card-body">
                            <h2> <%=  devocional.page.title %> </h2>
                            <span> Publicado em:
                                <%=   moment( devocional.published_at ).format('DD/MM/YYYY - h:mm') %>
                            </span>

                            <div class="conteudo-texto"><%- (devocional.page.text ) %></div>
                        </div>

                        <div class="card-footer bg-transparent animation delay4">
                            <div class="d-flex flex-row  justify-content-end">
                                <div class="p-2">
                                    <div class="dev-calendar">
                                        <i class="icon-calendar"></i>
                                    </div>
                                </div>
                                <div class="p-2">
                                    <div class="dev-published_at">
                                        <%=   moment( devocional.published_at ).format('DD/MM/YYYY - h:mm') %>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>

                </div>

            </div>
        </div>

    </section>

    <!-- Footer -->
    <%- include('comum/footer') -%>

    <a href="#" class="scrollup animated bounceInUp"> </a>

    <%- include('comum/includeJs') -%>
    <!-- Script Principal  -->
    <script src="js/main.js"></script>
    <script>
        home.selectNav('devocionais');
    </script>

</body>

</html>